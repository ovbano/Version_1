<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acercade">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
        <LinearLayout
            android:id="@+id/campo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"

            android:orientation="vertical">

            <TextView
            android:id="@+id/texto1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encuestas Vinc"
            android:textColor="@color/nos"
            android:textSize="22dp"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/texto2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AppExactas es una aplicación de encuestas que no necesitan una conexión a una red de datos para recolectar las respuestas necesarias."
                android:textAlignment="center"
                android:textSize="17dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/texto3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FUNCIONALIDAD"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/texto4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Con tu cuenta de encuestador, es posible comenzar a recolectar datos con las encuestas creadas. Las encuestas permiten cargar una foto, datos que las encuestas tradicionales realizadas en papel no permitían "
                android:textAlignment="center"
                android:textSize="17dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/texto44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SINCRONIZACIÓN"
                android:textSize="17dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:text="- Los datos fueron enviados"
                android:layout_alignParentLeft="true"
                android:id="@+id/conectado"
                android:textSize="17dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:background="@drawable/success"
                android:layout_alignParentRight="true"
                android:id="@+id/imageconectado"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <TextView
                android:text="- Necesita conexión para envíar"
                android:layout_alignParentLeft="true"
                android:id="@+id/noconectado"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_below="@+id/conectado"
                android:layout_height="wrap_content" />

            <ImageView
                android:background="@drawable/stopwatch"
                android:layout_alignParentRight="true"
                android:id="@+id/imagenoconectado"
                android:layout_below="@+id/imageconectado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:id="@+id/texto5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuando la aplicación detecta una conexión a Internet las encuestas son cargadas a un servidor externo, para analizar los datos"
                android:textAlignment="center"
                android:textSize="17dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/texto6"
                android:text="IMPORTANTE"
                android:layout_below="@+id/texto5"
                android:layout_alignParentLeft="true"
                android:textSize="17dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/texto7"
                android:layout_below="@+id/texto6"
                android:text="Verificar que todos los registros se envian al servidor externo."
                android:layout_alignParentLeft="true"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/texto8"
                android:layout_below="@+id/texto7"
                android:text="Realiza los siguentes pasos:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/texto9"
                android:layout_below="@+id/texto8"
                android:layout_marginTop="8dp"
                android:text="1. Ir a Menu Principal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/texto10"
                android:layout_below="@+id/texto9"
                android:text="2. Registros"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/texto11"
                android:layout_below="@+id/texto10"
                android:text=" - Verificar -> Registros"
                android:textSize="17dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/texto12"
                android:layout_below="@+id/texto11"
                android:text=" - Verificar -> Encuesta1"
                android:textSize="17dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/texto13"
                android:layout_below="@+id/texto12"
                android:text=" - Verificar -> Encuesta2"
                android:textSize="17dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/texto14"
                android:layout_below="@+id/texto13"
                android:text=" - Verificar -> Personas Encuestadas"
                android:textSize="17dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/texto15"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/texto14"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Si las encuestas registradas se envían al servidor, automáticamente se borran de la aplicación"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/texto16"
                android:text="PERMISOS"
                android:layout_below="@+id/texto15"
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/texto17"
                android:layout_below="@+id/texto16"
                android:text="Se requieren los siguiente permisos para el correcto funcionamiento de la aplicación"
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/texto18"
                android:layout_below="@+id/texto17"
                android:layout_marginTop="8dp"
                android:text="1. Acceso al almacenamiento del teléfono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="17dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/texto19"
                android:layout_below="@+id/texto18"
                android:text="1. Acceso a cámara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="17dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/texto20"
                android:layout_below="@+id/texto19"
                android:text="1. Acceso Ubicación / Localización"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="17dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/texto21"
                android:layout_below="@+id/texto20"
                android:text="1. Acceso a estado de red(Wifi/Datos)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="17dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/texto22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/texto21"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:text="Creado por acastillo"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="italic"
                tools:ignore="TextSizeCheck" />

            <Button
                android:id="@+id/buttonRegresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Regresar"
                android:layout_gravity="right"/>


        </LinearLayout>



    </LinearLayout>
</ScrollView>